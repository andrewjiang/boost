<div class="container-fluid banner-sessions">
  <div class="container">
    <center>
      <h1>Change your password</h1>
    </center>
  </div>
</div>
<div class="container-fluid">
  <div class="container sessions-form" role="main">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <div class="col-md-6 col-md-offset-3">

        <%= f.hidden_field :reset_password_token %>

        <div class="row">
          <div class="col-md-12">
            <% if !f.object.errors.empty? %>
              <%= f.label :password, f.object.errors.full_messages[0], class: "error" %>
            <% end %>
          </div>
        </div>

        <div class="row form-row">
          <div class="col-md-12">
            <%= f.password_field :password, class: "form-control", placeholder: "New password", :autofocus => true %>
          </div>
        </div>

        <div class="row form-row">
          <div class="col-md-12">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password" %>
          </div>
        </div>

        <div class="row form-submit">
          <%= f.submit "CHANGE PASSWORD", class: "btn btn-lg btn-info" %>
        </div>

        <div class="row form-row form-alt-link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
