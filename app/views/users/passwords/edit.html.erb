<div class="container-fluid" id="list-top-edit-password">
  <div class="container">
    <center>
      <h1>Change your password</h1>
    </center>
  </div>
</div>
<div class="container-fluid">
  <div class="container" id="edit-password-form" role="main">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: "form-control", :autofocus => true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div><%= f.submit "Change my password", class: "btn btn-larg btn-primary"%></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>