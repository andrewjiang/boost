<script type="text/javascript">
    mixpanel.track("ResetPassword Page Loaded")
</script>
<div class="container-fluid banner-sessions">
  <div class="container">
    <center>
      <h1>Reset your password</h1>
      <h5>Enter your email and we'll send you a password reset link</h5>
    </center>
  </div>
</div>
<div class="container-fluid">
  <div class="container sessions-form" role="main">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post}) do |f| %>
      <div class="col-md-6 col-md-offset-3">
        
        <div class="row">
          <div class="col-md-12">
            <% if !f.object.errors.empty? %>
              <%= f.label :email, f.object.errors.full_messages[0], class: "error" %>
            <% end %>
          </div>
        </div>

        <div class="row form-row">
          <div class="col-md-12">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", :autofocus => true %>
          </div>
        </div>

        <div class="row form-submit">
          <%= f.submit "RESET PASSWORD", class: "btn btn-lg btn-info" %>
        </div>

        <div class="row form-row form-alt-link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
