<script type="text/javascript">
    mixpanel.track("Signup Page Loaded")
</script>
<div class="container-fluid banner-sessions">
  <div class="container">
    <center>
      <h1>Sign in</h1>
    </center>
  </div>
</div>
<div class="container-fluid">
  <div class="container sessions-form" role="main">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="col-md-6 col-md-offset-3">

        <div class="row">
          <div class="col-md-12">
            <% if !f.object.errors.empty? %>
              <%= f.label :email, f.object.errors.full_messages[0], class: "error" %>
            <% end %>
          </div>
        </div>

        <div class="row form-row">
          <div class="col-md-12">
            <%= f.email_field :email, class: "form-control", placeholder: "Email", :autofocus => true %>
          </div>
        </div>

        <div class="row form-row">
          <div class="col-md-12">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
        </div>

        <div class="row form-submit">
          <%= f.submit "SIGN IN", class: "btn btn-lg btn-info" %>
        </div>

        <div class="row form-row form-alt-link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>    
  </div>
</div>
