<script type="text/javascript">
    mixpanel.track("Profile Page Loaded")
</script>
<div class="container-fluid lgray-bkg top-fluid">
  <div class="container segment-top">
  	<center>
      <h2><%= current_user.first_name %>'s Profile</h2>
    </center>
  </div>
  <div class="container segment-bottom">
  	<div class="row">
  		<div class="col-md-5 col-md-offset-1">
  			<div class="row driver-info">
  				<div class="col-xs-5">
            <% if current_user.male? %>
  					  <%= link_to image_tag("profile-xy.png", class: "profile-pic"), profile_path %>
            <% else %>
              <%= link_to image_tag("profile-xx.png", class: "profile-pic"), profile_path %>
            <% end %>
  				</div>
  				<div class="col-xs-7">
  					<h3>You: <br /> <span class="flatgreen"><%= current_user.full_name %> </span></h3>
  					<h5>Drives: <%= current_user.default_car_schedule.join(", ") %></h5>
  					<h5>Phone #: <%= current_user.phone_number %></h5>
            <h5>Email: <a href="mailto:<%= current_user.email %>"><%= current_user.email %></a></h5>
  				</div>
  			</div>
  			<div class="row driver-info">
          <% if @partner.nil? %>
            <div class="col-xs-5 no-partner">
              <%= image_tag("profile-xy.png", class: "profile-pic") %>
            </div>
            <div class="col-xs-7">
              <h3>No partner</h3>
              <h5>If you'd like to have a partner to take some of your driving days, let us know at <a href="mailto:support@zephyrcar.com" >support@zephyrcar.com</a></h5>
            </div>
          <% else %>
    				<div class="col-xs-5">
    					<% if @partner.male? %>
                <%= link_to image_tag("profile-xy.png", class: "profile-pic"), profile_path %>
              <% else %>
                <%= link_to image_tag("profile-xx.png", class: "profile-pic"), profile_path %>
              <% end %>
    				</div>
    				<div class="col-xs-7">
    					<h3>Partner: <br /> <span class="flatorange"><%= @partner.full_name %></span></h3>
    					<h5>Drives: <%= @partner.default_car_schedule.join(", ") %></h5>
    					<h5>Phone #: <%= @partner.phone_number %></h5>
    					<h5>Email: <a href="mailto:<%= @partner.email %>"><%= @partner.email %></a></h5>
    				</div>
          <% end %>
  			</div>
  		</div>
  		<div class="col-md-5">
			<ul id="notes">
			  <li>
          <% if @partner.nil? %>
            <p>No note</p>
          <% else %>
            <p><u>CAR HANDOFF INSTRUCTIONS:</u></p>
            <p><%= @partner.parking_instructions %></p>
            <p>Hand off the car by:</p>
            <p><strong><%= @partner.parking_timing %></strong></p>
            <p>How to contact <%= @partner.first_name %>:</p>
            <p><strong><%= @partner.how_to_contact %></strong></p>
          <% end %>
			 </li>
			</ul>
  		</div>
  	</div>
  </div>
</div>
